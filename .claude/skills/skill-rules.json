{
    "version": "1.0",
    "description": "Skill activation triggers for Claude Code. Controls when skills automatically suggest or block actions.",
    "skills": {
        "skill-developer": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "Meta-skill for creating and managing Claude Code skills",
            "promptTriggers": {
                "keywords": [
                    "skill system",
                    "create skill",
                    "add skill",
                    "skill triggers",
                    "skill rules",
                    "hook system",
                    "skill development",
                    "skill-rules.json"
                ],
                "intentPatterns": [
                    "(how do|how does|explain).*?skill",
                    "(create|add|modify|build).*?skill",
                    "skill.*?(work|trigger|activate|system)"
                ]
            }
        },
        "success-formula-analyzer": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "Analyze successful indie developers and small teams to extract reproducible success formulas",
            "promptTriggers": {
                "keywords": [
                    "success pattern",
                    "success formula",
                    "indie developer success",
                    "revenue model",
                    "product-market fit",
                    "small team success",
                    "solo founder",
                    "bootstrapped",
                    "profitable indie",
                    "successful case",
                    "analyze success",
                    "how they succeeded",
                    "indie hacker",
                    "micro-saas success"
                ],
                "intentPatterns": [
                    "(analyze|study|learn from|research).*?(success|successful)",
                    "(how did|why did).*?succeed",
                    "(extract|find|identify).*?(pattern|formula|method)",
                    "(replicate|copy|reproduce).*?success",
                    "success.*?(story|case|example)"
                ]
            }
        },
        "business-idea-evaluator": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "Evaluate and score business ideas with evidence-based criteria for indie developers",
            "promptTriggers": {
                "keywords": [
                    "evaluate idea",
                    "score business",
                    "assess market",
                    "validate idea",
                    "business viability",
                    "idea validation",
                    "market opportunity",
                    "competitive analysis",
                    "evaluate business",
                    "is this idea good",
                    "rate my idea",
                    "business evaluation",
                    "idea assessment"
                ],
                "intentPatterns": [
                    "(evaluate|assess|analyze|score|rate).*?(idea|business|concept)",
                    "(is|would).*?(viable|worth|good idea)",
                    "(validate|verify|check).*?(business|idea|concept)",
                    "(how good|should I|worth building).*?idea"
                ]
            }
        },
        "feasibility-checker": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "Validate execution feasibility for solo/small teams across technical, financial, and time dimensions",
            "promptTriggers": {
                "keywords": [
                    "can I build",
                    "feasibility",
                    "feasible",
                    "can I execute",
                    "resource requirements",
                    "technical feasibility",
                    "time estimation",
                    "budget requirements",
                    "skill gap",
                    "can I afford",
                    "do I have time",
                    "realistic timeline",
                    "execution capability"
                ],
                "intentPatterns": [
                    "(can I|am I able|could I).*?(build|create|execute)",
                    "(is it|is this).*?(feasible|realistic|doable)",
                    "(do I have|have enough).*?(time|skills|budget|resources)",
                    "(how long|how much).*?(time|money|effort)",
                    "feasibility.*?(check|analysis|assessment)"
                ]
            }
        },
        "business-orchestrator": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "Orchestrate comprehensive business analysis coordinating multiple specialized agents",
            "promptTriggers": {
                "keywords": [
                    "complete analysis",
                    "full validation",
                    "comprehensive evaluation",
                    "end-to-end analysis",
                    "multi-agent",
                    "orchestrate",
                    "full assessment",
                    "complete evaluation",
                    "business action plan",
                    "validate completely",
                    "analyze everything",
                    "full feasibility",
                    "business strategy",
                    "startup roadmap",
                    "launch plan"
                ],
                "intentPatterns": [
                    "(complete|comprehensive|full|thorough).*?(analysis|evaluation|assessment|validation)",
                    "(end-to-end|complete|full).*?(check|review|analysis)",
                    "analyze.*?(everything|completely|thoroughly)",
                    "(create|generate|make).*?(action plan|roadmap|strategy)",
                    "(validate|evaluate).*?(completely|thoroughly|end-to-end)"
                ]
            }
        },
        "success-story-researcher": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "Research and extract success stories from the web including founder journeys and building processes",
            "promptTriggers": {
                "keywords": [
                    "research success stories",
                    "find success cases",
                    "search for stories",
                    "indie developer cases",
                    "founder journey",
                    "product launch story",
                    "building in public",
                    "revenue milestone",
                    "startup post-mortem",
                    "indie hacker interview",
                    "how was built",
                    "success case study",
                    "web scraping",
                    "find examples",
                    "research examples",
                    "successful founders",
                    "indie success",
                    "bootstrapped stories"
                ],
                "intentPatterns": [
                    "(research|find|search|look for).*?(success|successful|story|stories|case|cases)",
                    "(how|why).*?(built|created|made|grew|launched)",
                    "find.*?(example|examples|founder|journey)",
                    "(search|look for).*?(indie|bootstrap|startup).*?(story|success)",
                    "(web|internet|online).*?(research|search|scrape)"
                ]
            }
        },
        "idea-finder": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "Find new business ideas by applying proven success patterns from analyzed stories",
            "promptTriggers": {
                "keywords": [
                    "find business ideas",
                    "generate ideas",
                    "new startup ideas",
                    "what should I build",
                    "business opportunities",
                    "startup idea",
                    "business idea",
                    "find opportunities",
                    "what to build",
                    "idea generation",
                    "아이템 찾아줘",
                    "아이디어 찾기",
                    "비즈니스 아이디어",
                    "뭘 만들면 좋을까",
                    "사업 아이템",
                    "창업 아이디어"
                ],
                "intentPatterns": [
                    "(find|generate|suggest|give me|show me).*?(idea|ideas|opportunity|opportunities)",
                    "(what should|what can).*?(I|we).*?(build|create|make)",
                    "(looking for|need|want).*?(business|startup|project).*?idea",
                    "(help.*?find|help.*?think of).*?(idea|opportunity)",
                    "idea.*?(generation|discovery|finding)"
                ]
            }
        },
        "markdown-formatter": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "medium",
            "description": "Format and polish markdown documents using rumdl, frontmatter, link conversion, and deduplication",
            "promptTriggers": {
                "keywords": [
                    "format markdown",
                    "clean markdown",
                    "markdown lint",
                    "rumdl",
                    "markdown formatter",
                    "fix markdown",
                    "polish markdown",
                    "markdown cleanup",
                    "markdown readability",
                    "frontmatter",
                    "markdown metadata",
                    "obsidian frontmatter",
                    "markdown links",
                    "wiki links",
                    "markdown duplicates",
                    "markdown best practices",
                    "document formatting",
                    "prettify markdown",
                    "markdown quality",
                    "markdown style",
                    "markdown errors",
                    "마크다운 정리",
                    "마크다운 포맷",
                    "문서 정리",
                    "문서 포맷팅"
                ],
                "intentPatterns": [
                    "(format|clean|fix|polish|prettify).*?(markdown|document|doc|md)",
                    "(markdown|document).*?(format|clean|fix|polish|lint)",
                    "(add|create|insert).*?(frontmatter|metadata)",
                    "(convert|fix|change).*?(link|links)",
                    "(remove|delete|eliminate).*?(duplicate|redundant)",
                    "(improve|enhance|optimize).*?(readability|quality)",
                    "markdown.*?(error|issue|problem|warning)",
                    "rumdl.*?(check|fix|run)",
                    "(wiki.*?link|obsidian.*?link|internal.*?link)"
                ]
            },
            "fileTriggers": {
                "pathPatterns": [
                    "**/*.md",
                    "**/*.markdown"
                ],
                "contentPatterns": [
                    "\\[\\[[^\\]]+\\]\\]",
                    "^[^#\\s].*https?://[^\\s]+",
                    "^#{2,}\\s+[^\\n]+\\s*$\\n^#{2,}\\s+[^\\n]+\\s*$"
                ]
            }
        }
    },
    "notes": {
        "enforcement_types": {
            "suggest": "Skill suggestion appears but doesn't block execution",
            "block": "Requires skill to be used before proceeding (guardrail)",
            "warn": "Shows warning but allows proceeding"
        },
        "priority_levels": {
            "critical": "Highest - Always trigger when matched",
            "high": "Important - Trigger for most matches",
            "medium": "Moderate - Trigger for clear matches",
            "low": "Optional - Trigger only for explicit matches"
        },
        "customization": {
            "pathPatterns": "Adjust to match your project structure (blog-api, auth-service, etc.)",
            "keywords": "Add domain-specific terms relevant to your project",
            "intentPatterns": "Use regex for flexible user intent matching"
        }
    }
}
